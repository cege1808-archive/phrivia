<div class="container-fluid">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4 class="brand">frivia</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 question-box">
      <h1><%= @question.question %></h1>
    </div>
  </div>


  <div class="row">
    <div class="col-md-4 col-md-offset-4 question-info">
      <p>Award your friends some points for their efforts.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 underline-thick">
      <h1>Answers</h1>
    </div>
  </div>

  <form method='POST' action='/question/<%= @question_order + 1 %>/ranked'>
    <% @answers_all.each do |answer| %>

    <div class="row">
      <div class="col-md-4 col-md-offset-4 answer-hr">
        <h4><%= answer.answer %></h4>
        <div>
          <input type="text" name="<%= answer.player_id %>" />
        <!--
          <%= Player.find(answer.player_id).name %>
        -->
        </div>
      </div>
    </div>

   
    <% end %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <input class="button-submit" type="submit" />
    </div>
  </div>

  </form>

</div>