<div class="container-fluid">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4 class="brand">frivia</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 underline-thick-score header-border-top">
      <h1>Leaderboard</h1>
    </div>
  </div>

  <!--- Score Headers -->

    <ol>
      <div class="row">
      
        <div class="col-md-1 col-md-offset-4 leaderboard-labels">
          <small>Rank</small>
        </div>

        <div class="col-md-1 leaderboard-labels edge">
          <small>Name</small>
        </div> 

        <div class="col-md-1 right leaderboard-labels edge">
          <small>Rounds Pts</small>
        </div>

        <div class="col-md-1 right leaderboard-labels edge">
          <small>Total Pts</small>
        </div>
      </div>
    </ol>

  <!---------------------->

    <ol>
      <% @all_players.each do |player| %>
      <div class="row">
      
        <div class="col-md-1 col-md-offset-4 score-hr">
          <li></li>
        </div>

        <div class="col-md-1 score-hr">
          <%= player.name %>   
        </div>

        <div class="col-md-1 right score-hr">
          <%= player.points %>
        </div>
        <div class="col-md-1 right score-hr">
          <%= player.points %>
        </div>
      </div>
      <% end %>
    </ol>

  <div class="col-md-2 col-md-offset-4">
    <a class= "link-button" href="/question/<%= @next_question %>">
      <button style="width: 200px">
        Next Question
      </button>
    </a>
  </div>

</div>


<div class="row">
    <div class="col-md-4 col-md-offset-4 underline-thick">
      <h1>Question <%= @question_order %> - <%= @question.question %></h1>
    </div>
  </div>

  <div>
    <% @answers_all.each do |answer| %>

    <div class="row">
      <div class="col-md-4 col-md-offset-4 answer-hr">
        <h4><%= answer.answer %></h4>
        <h5><%= @all_players.find(answer.player_id).name %> </h5>

      </div>
    </div>

   
    <% end %>

</div>


