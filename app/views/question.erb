<p> It is about <%= @player.name %>.</p>
<h1><%= @question.question %></h1>
<p>Some instructions</p>

<ul>
<% @all_answer.each do | answer| %>
  <li><%= answer.answer %></li>
<% end %>
</ul>

<form method="POST" action="/question/<%= (@question_order + 1) %>/answers">
  <input type="hidden" name="question_id" value="<%= @question.id %>"/>


  <select name="other_player_id">
  <% @other_players.each do | other_player| %>
    <option value="<%= other_player.id %>" > <%= other_player.name %></option>
    <% end %>
  </select>

  <textarea name="answer"></textarea>
  <input type="submit" />

</form>
