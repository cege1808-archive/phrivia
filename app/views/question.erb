<%= erb :_sides2 %>

<div class="container-fluid">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4 class="brand">frivia</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 question-box">
      <h1 class="question"><%= @question.question %></h1>
    </div>

    <div class="col-md-4 col-md-offset-4 copy">
      <p>Each player should answer the question in hope of making <%= @player.name %> smile the biggest.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 underline-thick">
      <h1>Answers</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% @all_answer.each do | answer| %>
        <h4 class="answer-hr cover"><%= answer.answer %></h4>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 question-select"">
      <form method="POST" action="/question/<%= (@question_order + 1) %>/answers">
        <input type="hidden" name="question_id" value="<%= @question.id %>"/>

        <select name="other_player_id">
          <% @other_players.each do | other_player| %>
            <option value="<%= other_player.id %>" > <%= other_player.name %></option>
          <% end %>
        </select>

    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <textarea name="answer" rows="3"></textarea>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <input class="button-submit" type="submit" />
    </div>
  </div>

      </form>


</div>
