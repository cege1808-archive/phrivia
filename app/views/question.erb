<div class="container-fluid">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4 class="brand">frivia</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 question-box">
      <h1><%= @question.question %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 question-info">
      <p>Each player should answer the question in hope of making <%= @player.name %> smile the biggest.</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% @all_answer.each do | answer| %>
        <h4 class="answer-hr"><%= answer.answer %></h4>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 question-select"">
      <form method="POST" action="/question/<%= @question.id %>/answers">

      <select name="other_player_id">
      <% @other_players.each do | other_player| %>
        <option value="<%= other_player.id %>" > <%= other_player.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <textarea name="answer" rows="3"></textarea>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <input class="button-submit" type="submit" />
    </div>
  </div>

      </form>


</div>
