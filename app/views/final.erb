<div class="container-fluid">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4 class="brand">frivia</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 header-border-top">
      <h1>The winner is <%= @highest_scorer.name %>, and sorry
<%= @lowest_scorer.name %>, but you've got this round.</h1>
    </div>
  </div>

  <form method="POST" action="/play_again">
    <button>Play Again</button>
  </form>

   <!--- Score Headers -->

  <ol>
    <div class="row">
    
      <div class="col-md-1 col-md-offset-4 leaderboard-labels">
        <small>Rank</small>
      </div>

      <div class="col-md-1 leaderboard-labels edge">
        <small>Name</small>
      </div>

      <div class="col-md-1 right leaderboard-labels edge">
        <small>Rounds Pts</small>
      </div>

      <div class="col-md-1 right leaderboard-labels edge">
        <small>Total Pts</small>
      </div>
    </div>
  </ol>

    <!---------------------->

    <ol>
      <% @all_players.each do |player| %>
      <div class="row">
      
        <div class="col-md-1 col-md-offset-4 score-hr">
          <li></li>
        </div>

        <div class="col-md-1 score-hr">
          <%= player.name %>   
        </div>

        <div class="col-md-1 right score-hr">
          <%= player.points %>
        </div>

        <div class="col-md-1 right score-hr">
          <%= player.points %>
        </div>
      </div>
      <% end %>
    </ol>
</div>
