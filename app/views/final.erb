<div class="container-fluid">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4 class="brand">frivia</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 header-border-top">
      <h1>The winner is <%= @highest_scorer.name %>, and sorry
<%= @lowest_scorer.name %>, but you've got this round.</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <form method="POST" action="/play_again">
        <button>Play Again</button>
      </form>
    </div>

    <div class="col-md-4 col-md-offset-4 underline-thick-score">
    </div>
  </div>

   <!--- Score Headers -->

  <ol>
    <div class="row">
    
      <div class="col-md-1 col-md-offset-4 leaderboard-labels">
        <small>Rank</small>
      </div>

      <div class="col-md-1 leaderboard-labels edge">
        <small>Name</small>
      </div>

      <div class="col-md-1 right leaderboard-labels edge">
        <small>Rounds Pts</small>
      </div>

      <div class="col-md-1 right leaderboard-labels edge">
        <small>Total Pts</small>
      </div>
    </div>
  </ol>

    <!---------------------->

    <ol>
      <% @all_players.each do |player| %>
      <div class="row">
      
        <div class="col-md-1 col-md-offset-4 score-hr">
          <li></li>
        </div>

        <div class="col-md-1 score-hr">
          <%= player.name %>   
        </div>

        <div class="col-md-1 right score-hr">
          <%= player.points %>
        </div>

        <div class="col-md-1 right score-hr">
          <%= player.points %>
        </div>
      </div>
      <% end %>
    </ol>
</div>

    <!---------------------->
    
    <% @count = 0 %>

<% @all_questions.each do |question| %>
  <div class="row">
      <div class="col-md-4 col-md-offset-4 underline-thick">
      <!-- <% @count += 1 %> -->
        <h1>Question <%= @count %> - <%= question.question %></h1>
      </div>
    </div>

    <% @answers_all = Answer.where(question_id: question.id) %>

    <div>
      <% @answers_all.each do |answer| %>

      <div class="row">
        <div class="col-md-4 col-md-offset-4 answer-hr">
          <h4><%= answer.answer %></h4>
          <h5><%= @all_players.find(answer.player_id).name %> </h5>

        </div>
      </div>

     
      <% end %>

  </div>

<% end %>
